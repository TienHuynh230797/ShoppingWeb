<body>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span> Cập nhật thông tin</h1>
        <!-- hiển thị mọi tin nhắn được trả lại từ server cho việc cập nhật -->
        {{#ifValue "11" mess}}
            <script>
                alert("Lỗi: Các thông tin có dấu * không được để trống");
            </script>
        {{/ifValue}}
        {{#ifValue "12" mess}}
            <script>
                alert("Lỗi: Mật khẩu mới và xác nhận mật khẩu mới không trùng khớp");
            </script>
        {{/ifValue}}
        <!-- SHOW USER DETAIL FORM -->
        <form action="/updateUserInfo" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="username" value={{user.username}} readonly>
            </div>
            <div class="form-group">
                <label>Tên*</label>
                <input type="text" class="form-control" name="name" value="{{user.name}}">
            </div>
            <div class="form-group">
                <label>Mật khẩu mới</label>
                <input type="password" class="form-control" name="newPassword">
            </div>
            <div class="form-group">
                <label>Nhập lại mật khẩu mới</label>
                <input type="password" class="form-control" name="newPasswordConfirm">
            </div>
            <!--<label>Xác nhận mật khẩu cũ*</label>
            <input type="text" class="form-control" name="password" placeholder="Mật khẩu cũ">-->
            <div>
                <p>&nbsp;</p>
            </div>
            <div>
                <p>*: Bắt buộc phải nhập</p>
            </div>
            <div>
                <p>&nbsp;</p>
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Cập nhật</button>
        </form>
        <hr>
    </div>
</div>
</body>
</html>
