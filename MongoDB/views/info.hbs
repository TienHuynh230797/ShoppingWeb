                                type: 'default', //Types: default, vertical, accordion
                                width: 'auto', //auto or any width like 600px
                                fit: true   // 100% fit in a container
                            });
                        });
                    </script>
                </div>
            </div>

            <div class="col-md-3">
                <div class="w_sidebar">
                    <section class="sky-form">
                        <h4>catogories</h4>
                        <div class="row1 scroll-pane">
                            <div class="col col-4">
                                {{#each category_list}}
                                    {{#ifEquals this._id ../productCurrent.category}}
                                        <label class="checkbox"><input type="checkbox" disabled name="checkbox"
                                                                       checked=""><i></i>{{this.name}}</label>
                                    {{else}}
                                        <label class="checkbox"><input type="checkbox" disabled
                                                                       name="checkbox"><i></i>{{this.name}}
                                        </label>
                                    {{/ifEquals}}
                                {{/each}}
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="page-header">
                    <h1><small class="pull-right">{{comment_list.length}} comments</small> Comments </h1>
                </div>
                <div class="comments-list">
                    {{#each comment_list}}
                        <div class="media">
                            <p class="pull-right"><small>{{this.time}}</small></p>
                            <div class="media-body">

                                <h4 class="media-heading user_name">{{this.fullname}}</h4>
                                {{this.subject}}

                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <script>
            function validateForm() {
                var x = document.forms["commentForm"]["fullname"].value;
                var y = document.forms["commentForm"]["subject"].value;
                if (x == "") {
                    alert("Name must be filled out");
                    return false;
                } else if (y == "") {
                    alert("You should write something");
                    return false;
                }
            }
        </script>
        <div class="comment">
            <form action="/product/{{productCurrent._id}}" onsubmit="return validateForm()" method="post" name="commentForm">
                <label for="fname">Full Name</label>
                <br>
                {{#if user}}
                    <input type="text" id="fname" name="fullname" placeholder="Your name.." value="{{user.name}}" readonly>
                {{else}}
                    <input type="text" id="fname" name="fullname" placeholder="Your name..">
                {{/if}}
                <br>
                <label for="subject">Subject</label>
                <br>
                <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
                <br>
                <input type="submit" value="Submit">
            </form>
        </div>
