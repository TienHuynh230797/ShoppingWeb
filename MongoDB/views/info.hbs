<body>
<div class="header">
    <div class="container">
        <div class="header-bottom-bottom">
            <div class="top-nav">
                <span class="menu"> </span>
                <ul>
                    <li><a href="/">Home </a></li>
                    {{#each type_list}}
                        {{#ifEquals this._id ../productCurrent.type}}
                            <li class="active"><a href="/type/{{this._id}}">{{this.name}}</a></li><!--men.html-->
                        {{else}}
                            <li><a href="/type/{{this._id}}">{{this.name}}</a></li><!--men.html-->
                        {{/ifEquals}}
                    {{/each}}
                </ul>
                <script>
                    $("span.menu").click(function () {
                        $(".top-nav ul").slideToggle(500, function () {
                        });
                    });
                </script>
                <div class="clearfix"></div>
            </div>
            <div class="search">
                <form action="/search/{{this.content}}" method="get">
                    <input type="text" name="content" placeholder="Search" onfocus="this.value = '';">
                    <input type="submit" value="">
